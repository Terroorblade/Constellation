
@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="text-center">
    <style>
        body{
            color:aliceblue;
            @* text-align: center;
            font-size: 2rem; *@
            font-family: Georgia, serif;
        }
        
    </style>
    <div class="background"></div>
    <div class="content">
    <h2>Вход в личный кабинет</h2>
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Пароль</label>
            <input name="Password" class="form-control input-custom" type="password" required />
        </div>
        <button type="submit" class="btn btn-primary btn-custom">Войти</button>
        <button type="button" class="btn btn-exit" onclick="history.back()">Назад</button>
    </form>
    </div>
</div>
