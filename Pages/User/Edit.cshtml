@page
@model КурсоваяБД5.Pages.User.EditModel

@{
    ViewData["Title"] = "Личный кабинет";
}

<h1>Личный кабинет</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Users.UserId" />
            <input type="hidden" asp-for="Users.IdentityUserId" />
            <div class="form-group">
                <label asp-for="Users.Username" class="control-label">
                    <b>Введите имя</b>
                </label>
                <input asp-for="Users.Username" class="form-control" />
                <span asp-validation-for="Users.Username" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Users.Email" class="control-label">
                    <b>Введите email</b>
                </label>
                <input asp-for="Users.Email" class="form-control" />
                <span asp-validation-for="Users.Email" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Users.PasswordHash" class="control-label">
                    Введите новый пароль
                </label>
                <input asp-for="Users.PasswordHash" class="form-control" />
                <span asp-validation-for="Users.PasswordHash" class="text-danger"></span>
            </div>

            <p>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" style="background-color: #ffe6f0; border-color: #ffe6f0; color: #333;" /> <a>|</a> <a href="@Request.Headers["Referer"]">Назад</a>
                </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}